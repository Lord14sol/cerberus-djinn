# ============================================
# CERBERUS ORACLE - ENVIRONMENT CONFIGURATION
# ============================================

# Server Configuration
PORT=3001
NODE_ENV=development

# Djinn-pmarket API
DJINN_API_URL=http://localhost:3000/api

# Polling Interval (milliseconds)
# Default: 180000 (3 minutes)
POLLING_INTERVAL_MS=180000

# LLM Provider: 'mock' | 'anthropic' | 'openai'
LLM_PROVIDER=mock

# API Keys (if using real LLM providers)
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx
# OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# Verification Thresholds
LAYER1_MIN_NEWS=1
LAYER2_MIN_CONFIDENCE=70
LAYER3_MIN_TRUST=70

# Webhook Configuration (optional)
# WEBHOOK_URL=http://localhost:3000/api/oracle/callback
# WEBHOOK_SECRET=your-secure-webhook-secret

# Solana Configuration (for future blockchain integration)
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# ORACLE_PRIVATE_KEY=xxxxxxxxxxxxx
